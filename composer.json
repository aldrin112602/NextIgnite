{
    "name": "nextIgnite/nextIgnite",
    "description": "Light-weight PHP framework for building dynamic web applications",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Aldrin Caballero",
            "email": "caballeroaldrin02@gmail.com"
        }
